---
import HubLayout from '../../../layouts/HubLayout.astro';
---

<HubLayout title="New Request Node">
  <div class="editor-wrapper">
    <p class="intro-text">
      Draft detailed technical notes. AI analysis will suggest tags and definitions.
    </p>

    <div class="form-stack">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" id="title" class="input-field" placeholder="Concept Name" />
      </div>
      
      <div class="form-group">
        <label for="category">Category</label>
        <select id="category" class="input-field">
          <option value="cs">Computer Science</option>
          <option value="electronics">Electronics</option>
          <option value="embedded">Embedded System</option>
          <option value="english">English Note</option>
        </select>
      </div>

      <div class="form-group">
        <label for="content">Raw Content</label>
        <textarea id="content" class="input-field monospace" rows="15" placeholder="Markdown content..."></textarea>
      </div>

      <div class="actions">
        <button id="analyze-btn" class="btn-primary">Analyze with AI</button>
      </div>
    </div>

    <!-- Output -->
    <div id="output-section" class="output-area hidden">
      <h3>Analysis Result</h3>
      
      <div class="result-block">
        <strong>Definition:</strong>
        <p id="ai-definition"></p>
      </div>

      <div class="result-block">
        <strong>Corrections:</strong>
        <ul id="ai-corrections" class="correction-list"></ul>
      </div>

      <div class="result-block">
        <strong>Generated Markdown:</strong>
        <pre><code id="final-markdown"></code></pre>
        <button id="copy-btn" class="btn-text">[Copy to Clipboard]</button>
      </div>
    </div>
  </div>

  <script>
    // Exact same logic as before, just class names might assume global styles
    const analyzeBtn = document.getElementById('analyze-btn');
    const outputSection = document.getElementById('output-section');
    
    // @ts-ignore
    analyzeBtn.addEventListener('click', async () => {
      // @ts-ignore
      const title = document.getElementById('title').value;
      // @ts-ignore
      const category = document.getElementById('category').value;
      // @ts-ignore
      const content = document.getElementById('content').value;

      if (!title || !content) {
        alert('Please fill in title and content');
        return;
      }

      // @ts-ignore
      analyzeBtn.textContent = 'Processing...';
      // @ts-ignore
      analyzeBtn.disabled = true;

      try {
        const response = await fetch('/api/analyze-note', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ title, category, content })
        });

        if (!response.ok) throw new Error('API Error');

        const result = await response.json();
        
        renderResults(result, { title, category, content });
        // @ts-ignore
        outputSection.classList.remove('hidden');

      } catch (error) {
        console.error(error);
        alert('Failed to analyze.');
      } finally {
        // @ts-ignore
        analyzeBtn.textContent = 'Analyze with AI';
        // @ts-ignore
        analyzeBtn.disabled = false;
      }
    });

    function renderResults(aiData, userInput) {
      // @ts-ignore
      document.getElementById('ai-definition').innerText = aiData.definition;

      const correctionsList = document.getElementById('ai-corrections');
      // @ts-ignore
      correctionsList.innerHTML = aiData.corrections.length > 0
        ? aiData.corrections.map(c => `<li>${c.original} â†’ <strong>${c.correction}</strong></li>`).join('')
        : '<li>No errors found.</li>';

      const frontmatter = `---
title: "${userInput.title}"
category: "${userInput.category}"
tags: [${aiData.tags.map(t => `"${t}"`).join(', ')}]
---`;

      const mdContent = `${frontmatter}

## Definition
${aiData.definition}

## Content
${userInput.content}
`;
      // @ts-ignore
      document.getElementById('final-markdown').innerText = mdContent;
    }
  </script>
</HubLayout>

<style>
  .editor-wrapper { max-width: 800px; }
  .intro-text { color: var(--c-ink-light); margin-bottom: 2rem; }

  .form-stack { display: flex; flex-direction: column; gap: 1.5rem; margin-bottom: 3rem; }
  
  .form-group { display: flex; flex-direction: column; gap: 0.5rem; }
  label { font-weight: 600; font-size: 0.9rem; color: var(--c-navy); }
  
  .input-field {
    padding: 0.8rem;
    border: 1px solid var(--c-border);
    border-radius: 4px;
    background: white;
    font-size: 1rem;
    font-family: var(--font-body);
  }
  .input-field:focus { outline: 2px solid var(--c-navy); border-color: transparent; }
  .monospace { font-family: var(--font-mono); font-size: 0.9rem; }

  .btn-primary {
    background: var(--c-navy);
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    font-weight: 600;
  }
  .btn-primary:hover { background: var(--c-teal); }

  .output-area {
    border-top: 2px solid var(--c-navy);
    padding-top: 2rem;
  }
  .hidden { display: none; }

  .result-block { margin-bottom: 2rem; }
  .correction-list { padding-left: 1.2rem; }
  .btn-text { color: var(--c-blue); text-decoration: underline; font-size: 0.9rem; }
</style>
