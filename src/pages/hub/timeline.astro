---
import HubLayout from '../../layouts/HubLayout.astro';
---

<HubLayout title="Timeline">
  <div class="construction-zone">
    <div class="icon">
      <i class="fa-solid fa-clock-rotate-left"></i>
    </div>
    <h1>Career Timeline</h1>
    <p>This feature is currently under construction.</p>
    <p>It will visualize your career path and major milestones.</p>
    <a href="/hub" class="btn-back">Return to Dashboard</a>
  </div>
</HubLayout>

<style>
  .construction-zone {
    text-align: center;
    padding: 100px 20px;
    background: var(--c-slate-900);
    border: 1px solid rgba(255,255,255,0.05);
    border-radius: 12px;
    color: var(--c-slate-400);
    max-width: 600px;
    margin: 40px auto;
  }
  .icon {
    font-size: 3rem;
    color: var(--c-accent);
    margin-bottom: 20px;
    opacity: 0.8;
  }
  h1 { color: white; margin-bottom: 20px; font-size: 1.5rem; }
  p { margin-bottom: 10px; line-height: 1.5; }
  
  .btn-back {
    display: inline-block;
    margin-top: 30px;
    padding: 10px 20px;
    background: rgba(255,255,255,0.05);
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: 0.2s;
  }
  .btn-back:hover { background: rgba(255,255,255,0.1); }
</style>
