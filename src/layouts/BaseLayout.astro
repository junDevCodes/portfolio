---
import '../styles/global.css';

interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle ? `${pageTitle} | JunYeong Lee` : "JunYeong Lee | Embedded Vision Engineer"}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-border py-8 mb-12">
        <div class="mx-auto w-full max-w-4xl px-4 sm:px-6 lg:px-8 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
          <a href="/" class="font-mono font-bold text-[1.1rem] text-heading border-0">JunYeong Lee</a>
          <nav class="flex flex-wrap gap-6">
            <a href="/#competencies" class="text-sm text-muted border-0 hover:text-heading hover:underline">Competencies</a>
            <a href="/#projects" class="text-sm text-muted border-0 hover:text-heading hover:underline">Projects</a>
            <a href="/hub" class="text-sm text-muted border-0 hover:text-heading hover:underline">Hub</a>
          </nav>
        </div>
      </header>

      <main class="mx-auto w-full max-w-4xl px-4 sm:px-6 lg:px-8">
        <slot />
      </main>

      <footer class="mt-auto border-t border-border py-12 text-sm text-muted">
        <div class="mx-auto w-full max-w-4xl px-4 sm:px-6 lg:px-8 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
          <p class="m-0 max-w-none">© 2026 JunYeong Lee. Documentation-first portfolio.</p>
          <div class="flex items-center gap-2">
            <a href="mailto:contact@example.com" class="border-0 hover:underline">Email</a>
            <span class="text-border">•</span>
            <a href="https://github.com/jundevcodes" target="_blank" class="border-0 hover:underline">GitHub</a>
            <span class="text-border">•</span>
            <a href="https://linkedin.com" target="_blank" class="border-0 hover:underline">LinkedIn</a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
