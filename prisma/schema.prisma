// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Portfolio Schema
// ============================================

model Portfolio {
  id          String   @id @default(cuid())
  name        String
  title       String
  bio         String?  @db.Text
  email       String?
  github      String?
  linkedin    String?
  website     String?
  location    String?
  avatarUrl   String?
  resumeUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projects    Project[]
  skills      Skill[]
  experiences Experience[]
  education   Education[]

  @@map("portfolios")
}

model Project {
  id          String   @id @default(cuid())
  portfolioId String
  title       String
  slug        String   @unique
  description String?  @db.Text
  content     String?  @db.Text
  imageUrl    String?
  demoUrl     String?
  githubUrl   String?
  tags        String[] // Array of tags
  featured    Boolean  @default(false)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("projects")
  @@index([portfolioId])
  @@index([slug])
}

model Skill {
  id          String   @id @default(cuid())
  portfolioId String
  name        String
  category    String   // e.g., "Frontend", "Backend", "DevOps"
  proficiency Int      @default(50) // 0-100
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("skills")
  @@index([portfolioId])
}

model Experience {
  id          String    @id @default(cuid())
  portfolioId String
  company     String
  position    String
  description String?   @db.Text
  startDate   DateTime
  endDate     DateTime?
  current     Boolean   @default(false)
  location    String?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("experiences")
  @@index([portfolioId])
}

model Education {
  id          String    @id @default(cuid())
  portfolioId String
  school      String
  degree      String
  field       String?
  description String?   @db.Text
  startDate   DateTime
  endDate     DateTime?
  current     Boolean   @default(false)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("education")
  @@index([portfolioId])
}

// ============================================
// Authentication Schema (Auth.js)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  isOwner       Boolean   @default(false)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
